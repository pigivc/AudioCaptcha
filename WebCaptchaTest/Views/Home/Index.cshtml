@using Pigi.Captcha
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Pigi.Captcha</h1>
    <p class="lead">ASP.NET MVC Audio Captcha ,simple to use</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<form method="post">
    <div class="row">
        @Html.Captcha(new CaptchaSettings { Id = "c1" })
    </div>

    <div class="row">
        @Html.Captcha(new CaptchaSettings { Id = "c2", ShowInput = true,EnableAudio = false,TextStyle = TextStyle.Numeric })
    </div>
    <button type="submit" class="btn btn-info" >Check captcha</button>

    <p>Captcha 1 result: @ViewBag.c1</p> 
    <p>Captcha 2 result: @ViewBag.c2</p> 
</form>
